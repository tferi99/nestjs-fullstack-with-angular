{
  "name": "server",
  "version": "1.0.0",
  "description": "A nest todo app",
  "author": "Bilal Haidar",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "run:services": "docker-compose up -d && exit 0",
    "stop:services": "docker-compose kill",
    "start": "ts-node src/index.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f ormconfig.json",
    "db:migration:generate": "npm-run-all -s -l clean build:server && yarn typeorm:cli migration:generate",
    "db:migration:create": "yarn typeorm:cli migration:create",
    "db:migrate": "npm-run-all -s -l clean build:server && yarn typeorm:cli migration:run",
    "query": "yarn typeorm:cli query",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/typeorm": "^7.1.5",
    "bcrypt": "^5.0.1",
    "class-transformer": "0.2.3",
    "class-validator": "0.9.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "csurf": "^1.9.0",
    "dotenv": "^9.0.2",
    "express-rate-limit": "^5.2.6",
    "global": "^4.3.2",
    "helmet": "^4.6.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "^7.0.1",
    "typeorm": "0.2.16",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.6.15",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/csurf": "^1.9.35",
    "@types/dotenv": "^8.2.0",
    "@types/express": "4.16.1",
    "@types/express-rate-limit": "^5.1.1",
    "@types/helmet": "^4.0.0",
    "@types/node": "^15.3.0",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "2.0.7",
    "@types/uuid": "^8.3.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-loader": "^9.1.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
